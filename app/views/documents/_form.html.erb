<div class="container">
<p style="color: green"><%= notice %></p>
<%= form_with(model: document) do |form| %>
  <% if document.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(document.errors.count, "error") %> prohibited this document from being saved:</h2>

      <ul>
        <% document.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= form.label :type, style: "display: block" %>
    <%= form.select :type, options_for_type, :prompt => 'Select One' %>
  </div>

  <div>
    <%= form.label :titre, style: "display: block" %>
    <%= form.text_field :titre %>
  </div>

  <div>
    <%= form.label :auteur, style: "display: block" %>
    <%= form.text_field :auteur %>
  </div>

  <div>
    <%= form.label :isbn, style: "display: block" %>
    <%= form.number_field :isbn %>
  </div>

  <div style ="margin-top : 10px; ">
    <%= form.submit %>
  </div>
<% end %>
</div>